page {
  background-color: #8B7765;
}
.user_info_wrap {
  height: 45vh;
  background-color: #F7F7F7;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 100vw;
  height: 45vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top: 20%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  top: 40%;
  border: 2rpx solid #8B7765;
  font-size: 30rpx;
  color: #8B7765;
  padding: 30rpx;
  font-weight: 600;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translate(-50%);
  top: -40rpx;
}
.user_content .user_main .user_util_wrap {
  font-size: 30rpx;
  background-color: #fff;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.user_content .user_main .user_util_wrap .util_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  border-radius: 10rpx;
}
.user_content .user_main .user_util_wrap .util_content {
  display: flex;
  border-radius: 10rpx;
}
.user_content .user_main .user_util_wrap .util_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.user_content .user_main .user_util_wrap .util_content navigator .iconfont {
  font-size: 50rpx;
}
.user_content .user_main .address_wrap {
  font-size: 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}
.user_content .user_main .appinfo_wrap {
  font-size: 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.user_content .user_main .appinfo_wrap .appinfo_wrap_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .appinfo_wrap .appinfo_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  border-radius: 10rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
